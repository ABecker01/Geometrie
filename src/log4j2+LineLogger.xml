<?xml version="1.0" encoding="UTF-8"?>
<!-- Konfiguration f端r Log4j2
     Root-Logger mit Level TRACE und Konfiguration
     des Loggers f端r die Klasse Line
     -->
<Configuration status="WARN">
<Appenders>
     <Console name="Console" target="SYSTEM_OUT">
       <PatternLayout>
         <Pattern>%d{HH:mm} %-5level %logger{36} - %msg%n</Pattern>
       </PatternLayout>
    </Console>
</Appenders>
<Loggers>
  <!-- Weiterer spezifischer Logger f端r
       die Klasse geometry.shapes.Line
       mit Level INFO 
  -->
  <Logger name="geometry.shapes.Line" level="INFO" />
	<!-- Konfiguration f端r alle anderen Logger -->
    <Root level="ERROR">
      <AppenderRef ref="Console"/>
    </Root>
</Loggers>
</Configuration>
