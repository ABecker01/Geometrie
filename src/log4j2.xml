<Configuration status="WARN">
<Appenders>
     <Console name="Console" target="SYSTEM_OUT">
       <PatternLayout>
         <Pattern>%d{dd. MM.YYYY HH:mm} %-5level %logger{36} - %msg%n</Pattern>
       </PatternLayout>
    </Console>
    <!-- Default f端r einen FileAppender ist append="true" -->
    <File name="myFile" fileName="logs/FirstScene.log"
                        append="false">
      <PatternLayout>
         <Pattern>%d{dd.MM.YYYY HH:mm} %-5level %logger{36} - %msg%n</Pattern>
      </PatternLayout>
     </File>
     <Async name="Async">
       <AppenderRef ref="myFile"/>
    </Async>
</Appenders>
<Loggers>
	<!-- Konfiguration f端r den Logger in der Klasse Line -->
    <Logger name="geometry.shapes.Line" level="INFO" />
	<!-- Konfiguration f端r die restlichen Logger -->
	<!-- Durch ersetzen des AppenderRef kann die Ausgabe
	     auf die Konsole umgelenkt werden! -->
    <Root level="ERROR">
      <AppenderRef ref="myFile"/>
    </Root>
</Loggers>
</Configuration>
